services:
 haproxy:
    user: haproxy
    container_name: haproxy
    image: haproxy:lts
    hostname: haproxy
    network_mode: bridge
    cap_add:
      - NET_ADMIN
    restart: always
    ports:
      - '80:80'
      - '443:443'
    volumes:
      - /etc/ssl/letsen:/usr/local/etc/haproxy/letsen
      - /usr/local/container/haproxy:/usr/local/etc/haproxy